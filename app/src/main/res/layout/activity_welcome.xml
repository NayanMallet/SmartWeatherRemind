<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/welcomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocean_blue_background_dark">

    <com.lottiefiles.dotlottie.core.widget.DotLottieAnimation
        android:id="@+id/lottieWelcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="68dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cloud_white"
            android:textSize="48dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:text="@string/welcome_sub_texte"
            android:textAlignment="center"
            android:textColor="#E9E8E8"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0CFFFFFF"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:text="@string/welcome_gps_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cloud_white"
            app:cornerRadius="100dp"
            app:strokeColor="@color/cloud_white"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btnManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="#0CFFFFFF"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:text="@string/welcome_manual_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cloud_white"
            app:cornerRadius="100dp"
            app:strokeColor="@color/cloud_white"
            app:strokeWidth="1dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
