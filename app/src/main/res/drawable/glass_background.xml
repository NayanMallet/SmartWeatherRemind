<!-- res/drawable/glass_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ombre portée douce -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- transparent, juste pour activer l'ombre -->
            <corners android:radius="24dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>

    <!-- Effet glass -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E6FFFFFF" /> <!-- Blanc à 90% -->
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#55FFFFFF" />
        </shape>
    </item>
</layer-list>
